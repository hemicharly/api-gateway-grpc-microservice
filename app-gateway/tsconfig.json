{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ES6"
    ],
    "module": "commonjs",
    "outDir": "build/src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "incremental": true
  },
  "include": [
    "**/**/*"
  ],
  "exclude": [
    ".git",
    "build/src",
    "node_modules"
  ]
}